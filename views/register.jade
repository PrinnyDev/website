div.container-fluid.custom-dropdown-menu
	form(action='/register', method='post')
		div.form-group
			label.control-label(for='username') Email
			input.form-control(type='text', id='email', name='email')
		div.form-group
			label.control-label(for='password') Password
			input.form-control(type='password', id='password', name='password')
		div.form-group
			label.control-label(for='passwordConfirm') Confirm Password
			input.form-control(type='password', id='passwordConfirm', name='passwordConfirm')
		button.btn.btn-default(type='submit') Register